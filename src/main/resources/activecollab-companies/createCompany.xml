<template name="createCompany" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="name" description="The name of the company."/>
    <sequence>
        <property name="uri.var.name" expression="$func:name"/>
        <payloadFactory media-type="json">
            <format>
                {
                "name":"$1"
                }
            </format>
            <args>
                <arg expression="$ctx:uri.var.name"/>
            </args>
        </payloadFactory>
        <property name="messageType" value="application/json" scope="axis2"/>
        <header name="X-Angie-AuthApiToken" expression="$ctx:uri.var.activeCollabToken" scope="transport"/>
        <filter source="$ctx:activecollabBlocking" regex="true">
            <then>
                <call blocking="true">
                    <endpoint>
                        <http method="POST" uri-template="{uri.var.apiUrl}/api/{uri.var.apiVersion}/companies"/>
                    </endpoint>
                </call>
            </then>
            <else>
                <call>
                    <endpoint>
                        <http method="POST" uri-template="{uri.var.apiUrl}/api/{uri.var.apiVersion}/companies"/>
                    </endpoint>
                </call>
            </else>
        </filter>
    </sequence>
</template>